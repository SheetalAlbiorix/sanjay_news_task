{
  "expo": {
    "name": "ReactNativeExpoApp",
    "slug": "ReactNativeExpoApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.app.reactnative.expo",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "UIBackgroundModes": ["location"],
        "NSLocationWhenInUseUsageDescription": "We need your location while the app is open to provide real-time updates.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We need your location in the background to keep tracking even when the app is closed."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.app.reactnative.expo",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow ReactNativeExpoApp to access your location while using the app.",
          "locationAlwaysAndWhenInUsePermission": "Allow ReactNativeExpoApp to access your location even when the app is closed."
        }
      ]
    ]
  }
}
